{
	"name": "nextion",
	"version": "1.0.0",
	"main": "base/build/main.js",
	"private": true,
	"type": "module",
	"license": "MIT",
	"scripts": {
		"next:dev": "next dev renderer",
		"next:build": "next build renderer",
		"base:build": "tsc -p base && tsc-alias -p ./base/tsconfig.json",
		"base:lint": "eslint base",
		"lint": "prettier -c . && yarn base:lint && yarn renderer:lint",
		"lint:fix": "prettier -w .",
		"boot": "yarn base:build && electron .",
		"start": "concurrently -k \"yarn next:dev\" \"wait-on tcp:127.0.0.1:3000 && yarn boot\"",
		"pre-build": "yarn next:build && yarn base:build",
		"build": "yarn pre-build && electron-builder",
		"postinstall": "electron-builder install-app-deps"
	},
	"packageManager": "yarn@4.2.2",
	"dependencies": {
		"@nextui-org/react": "^2.6.11",
		"autoprefixer": "^10.4.20",
		"electron-is-dev": "^3.0.1",
		"electron-log": "^5.2.4",
		"electron-store": "^10.0.0",
		"electron-updater": "6.3.9",
		"framer-motion": "^11.17.0",
		"motion": "^11.17.0",
		"next": "^15.1.4",
		"postcss": "^8.4.49",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"tailwindcss": "^3.4.17",
		"zustand": "^5.0.3"
	},
	"devDependencies": {
		"@iconify/react": "^5.2.0",
		"@types/node": "^22.10.5",
		"@types/react": "^19.0.4",
		"@types/react-dom": "^19.0.2",
		"@typescript-eslint/eslint-plugin": "^8.19.1",
		"@typescript-eslint/parser": "^8.19.1",
		"concurrently": "^9.1.2",
		"electron": "^33.3.1",
		"electron-builder": "^25.1.8",
		"electron-devtools-installer": "^4.0.0",
		"eslint": "^9.18.0",
		"eslint-config-next": "^15.1.4",
		"eslint-plugin-storybook": "^0.11.2",
		"prettier": "^3.4.2",
		"tsc-alias": "^1.8.10",
		"tsconfig-paths-webpack-plugin": "^4.2.0",
		"typescript": "^5.7.3",
		"wait-on": "^8.0.2"
	}
}
